---
import Header from "~/components/Header.astro";
import "@fontsource-variable/nunito";
import { SEO, type SEOProps } from "astro-seo";
import type { Thing } from "schema-dts";
import { Schema } from "astro-seo-schema";
import Footer from "~/components/Footer.astro";

interface Props {
  seo?: SEOProps;
  schemaGraphItems?: Thing[];
}

const { seo, schemaGraphItems } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Nirjan's Blog"
      href={new URL("rss.xml", Astro.site)}
    />

    {seo && <SEO {...seo} />}

    <Schema
      item={{
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebSite",
            "@id": "https://nirjan.dev",
            url: "https://nirjan.dev",
            name: "Nirjan's Personal site",
            description:
              "Personal site and blog about coding and tech by Nirjan",
          },
          ...(schemaGraphItems?.length ? schemaGraphItems : []),
        ],
      }}
    />
  </head>
  <body class="bg-background-800 text-copy-400 flex flex-col min-h-svh">
    <Header />
    <div class="container mx-auto px-4 py-3 md:mt-28 flex-grow">
      <main id="main-content">
        <slot />
      </main>
    </div>
    <Footer />
    <style is:global>
      a {
        @apply text-secondary-400 transition-colors;

        &:hover,
        &:focus {
          @apply text-secondary-600;
        }
      }

      body:has(header .headroom--bottom) {
        @apply pb-[80px];
      }

      /* ----------------------------------------------
 * Generated by Animista on 2024-7-23 10:46:21
 * Licensed under FreeBSD License.
 * See http://animista.net/license for more info. 
 * w: http://animista.net, t: @cssanimista
 * ---------------------------------------------- */

      /**
 * ----------------------------------------
 * animation flip-in-hor-bottom
 * ----------------------------------------
 */
      @-webkit-keyframes flip-in-hor-bottom {
        0% {
          -webkit-transform: rotateX(80deg);
          transform: rotateX(80deg);
          opacity: 0;
        }
        100% {
          -webkit-transform: rotateX(0);
          transform: rotateX(0);
          opacity: 1;
        }
      }
      @keyframes flip-in-hor-bottom {
        0% {
          -webkit-transform: rotateX(80deg);
          transform: rotateX(80deg);
          opacity: 0;
        }
        100% {
          -webkit-transform: rotateX(0);
          transform: rotateX(0);
          opacity: 1;
        }
      }
    </style>
  </body>
</html>
